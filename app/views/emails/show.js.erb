$("#<%= @email.id %>").bind("change", function() {
  var bool = this.checked ? true : false;
  var regex = /task_/;
  $.ajax({
    url: "/tasks/" + this.id.replace(regex, ""),
    type: "PUT",
    data: { status: bool }
  });
});
