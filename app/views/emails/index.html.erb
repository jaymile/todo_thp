<div class="container">
 <div class="row">
  <!-- First row -->
  <div class="col-12 col-sm-12 col-md-3 col-lg-2">
   <!-- Left column (First row) -->

  </div>
  <div class="col-12 col-sm-12 col-md-9 col-lg-10">
   <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
    <button type="button" class="btn btn-secondary">&nbsp;<i class="fa fa-refresh" aria-hidden="true"></i>&nbsp;</button>
    <button type="button" class="btn btn-secondary">&nbsp;<i class="fa fa-star" aria-hidden="true"></i>&nbsp;</button>
   </div>
   <div class="btn-group" role="group">

   </div>
   <!-- Right side buttons -->


   <!-- END: Right side buttons -->
  </div>
  <!-- END: Right column -->
 </div>
 <!-- END: first row -->
 <hr>
 <div class="row">
  <!-- Sencond row -->
  <div class="col-12 col-sm-12 col-md-3 col-lg-2">
   <!-- LEFT COLUMN Menu (Sencond row) -->
   <ul class="list-group">
    <!-- Menu -->

    <li class="list-group-item justify-content-between">
     Inbox
     <span class="badge badge-default badge-pill"><%=@emails.count%></span>
    </li>
    <li class="list-group-item justify-content-between">
     Lu
     <span class="badge badge-default badge-pill"><%=@read.count%></span>
    </li>
    <li class="list-group-item justify-content-between">
     Non lu
     <span class="badge badge-default badge-pill"><%=@unread.count%></span>
    </li>
   </ul>
   <!-- End left menu -->
  </div>
  <!-- END: Left column (Second row) -->
  <div class="col-12 col-sm-12 col-md-9 col-lg-10">
   <!-- Tabs -->
   <ul class="nav nav-tabs">
    <li class="nav-item">
     <a class="nav-link active" href="#"><i class="fa fa-inbox"></i>&nbsp;&nbsp;Inbox</a>
    </li>
   </ul>
   <!-- END: Tabs -->
  <% @emails.each do |email| %>
   <div class="list-group <%= email.id %>">
    <li class="list-group-item d-flex justify-content-start">
     &nbsp;&nbsp;&nbsp;&nbsp;
          <span class="name fullname pt-2">
            <p style="text-decoration: none; color: black;" class="font-weight-bold text-dark <%=email.id%>"><%= link_to email.object, email_path(email), remote: true%></p>
          </span>
          <span id="<%= email.id %>"></span>

          <span class="ml-auto p-2">
            <a href="<%= edit_email_path(email.id) %>"><i class="fa fa-paperclip"></i></a>
            <span class="badge badge-default badge-pill"><%= email.created_at.strftime('%D') %></span>
          </span>

        </li>


      </div>
      <% end %>
    </div>

  </div>
  <!-- END: Second row -->
</div>
<!-- END: container -->
